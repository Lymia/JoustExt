comment "
a = 10
b = 16
c = 21
"

set $a = 10
    $b = 16
    $c = 21
in {
  comment +margins "|
                    |a + b * 10 = " ()*($a + $b * 10)
  comment +margins "|
                    |a + b * c = " ()*($a + $b * $c)
  comment +margins "|
                    |c * 100 / b = " ()*($c * 100 / $b)
  comment +margins "|
                    |a * b * c / (a + b - c) = " ()*($a * $b * $c / ($a + $b - $c))
}
